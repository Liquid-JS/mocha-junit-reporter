{
    "name": "@liquid-js/mocha-junit-reporter",
    "version": "2.0.1",
    "description": "A JUnit reporter for mocha.",
    "main": "index.js",
    "types": "index.d.ts",
    "files": [
        "index.js",
        "index.d.ts",
        "index.js.map"
    ],
    "scripts": {
        "ci": "yarn lint && yarn test",
        "lint": "tslint --project .",
        "lint:fix": "yarn lint --fix",
        "_test": "cross-env MOCHA_FILE=test/mocha.xml mocha -r source-map-support/register -r ts-node/register \"test/*-spec.ts\"",
        "test": "yarn _test --reporter=spec",
        "tdd": "yarn _test --reporter=min --watch",
        "build": "tsc",
        "prepublishOnly": "yarn build",
        "prepare": "husky install",
        "release": "git diff --exit-code && standard-version --preset angular --releaseCommitMessageFormat \"chore: release v{{currentTag}}\" && git push --follow-tags origin"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Liquid-JS/mocha-junit-reporter"
    },
    "keywords": [
        "mocha",
        "junit",
        "reporter"
    ],
    "author": {
        "name": "Michael Allen",
        "email": "michael.lee.allen@gmail.com"
    },
    "license": "MIT",
    "devDependencies": {
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@sinonjs/fake-timers": "^7.1.2",
        "@types/chai": "^4.2.21",
        "@types/chai-xml": "^0.3.2",
        "@types/debug": "^4.1.7",
        "@types/mkdirp": "^1.0.2",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.7.1",
        "@types/rimraf": "^3.0.2",
        "@types/test-console": "^1.1.1",
        "@types/xml": "^1.0.6",
        "chai": "^4.3.4",
        "chai-xml": "^0.4.0",
        "conventional-changelog-cli": "^2.1.1",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "husky": "^7.0.2",
        "mocha": "^9.1.0",
        "rimraf": "^3.0.2",
        "source-map-support": "^0.5.19",
        "standard-version": "^9.3.1",
        "test-console": "^2.0.0",
        "ts-node": "^10.2.1",
        "tslint": "^6.1.3",
        "typescript": "^4.3.5",
        "xmllint": "^0.1.1"
    },
    "dependencies": {
        "debug": "^4.3.2",
        "mkdirp": "~1.0.4",
        "strip-ansi": "<7.0.0",
        "xml": "^1.0.1"
    },
    "peerDependencies": {
        "mocha": ">=8.0.0"
    }
}
