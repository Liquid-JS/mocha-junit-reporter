{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "module": "commonjs",
        "target": "es2017",
        "importHelpers": false,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "strict": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "test"
    ]
}
